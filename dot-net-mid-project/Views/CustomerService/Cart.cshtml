@model List<dot_net_mid_project.Models.VM.ServiceModel>
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<a href="/CustomerService/Index" class="btn btn-info">Back</a>
<br />
<h2>Cart</h2>


<table class="table">
    <tr>
        <th>Name</th>
        <th>Details</th>
        <th>Price</th>
        <th>Status</th>
        <th>Type</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
     {
        if (item != null)
        {
            <tr>
                <td>@item.name</td>
                <td>@item.details</td>
                <td>@item.price</td>
                <td>@item.status</td>
                <td>@item.type</td>
                <td><a href="/CustomerService/DeleteToCart/@item.id" class="btn btn-danger">Delete</a> </td>
            </tr>
        }

     }
</table>
<form action="/CustomerService/Checkout" method="post">
    <label>Delivary Address</label>
    <input type="text" name="delevery_address" required="required"/>
    <br />
    <input type="submit" name="submit" value="Checkout" class="btn btn-danger" />
</form>
